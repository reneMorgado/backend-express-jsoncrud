<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.css">
    <script src="https://kit.fontawesome.com/6e16c16f00.js" crossorigin="anonymous"></script>
    <title>Administrar</title>
</head>

<body>
    <section class="hero is-primary">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    Personas registradas
                </h1>
                <h2 class="subtitle">
                    Editar registros
                </h2>
            </div>
        </div>
    </section>
    <br><br>
    <div class="container is-fluid" id="contenedor">
        <div class="buttons">
            <button onclick="window.location.href = '/'" class="button is-success">Volver al inicio</button>
            <button onclick="window.location.href = '/delete'" class="button is-danger">Eliminar un registro</button>
            <button class="button is-warning" onclick="editPage();">AÃ±adir un registro</button>
        </div>
    </div>
</body>
<script>
    var $CONTENEDOR = document.querySelector('#contenedor')

    function editPage() {
        $CONTENEDOR.innerHTML += layoutAdd()
    }
    const layoutAdd = () => {
        return `
        <div class="box">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                        <form action="/admin" method="POST">
                            <label class="label" for="Nombre" autofocus>Nombre:</label>
                            <input class="input" type="text" placeholder="Nombre" name="nombre" id="Nombre">
                            <label class="label" for="Apellido">Apellido:</label>
                            <input class="input" type="text" placeholder="Apellido" name="apellido" id="Apellido">
                            <label class="label" for="Edad">Edad:</label>
                            <input class="input" type="text" placeholder="Edad" name="edad" id="Edad">
                            <br><br>
                            <input type="submit" class="button is-warning" value="Enviar">
                        </form>
                    </div>
                </div>
            </article>
        </div>
    `
    }
</script>

</html>