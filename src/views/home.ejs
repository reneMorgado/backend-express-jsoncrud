<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.css">
    <script src="https://kit.fontawesome.com/6e16c16f00.js" crossorigin="anonymous"></script>
    <title>Document</title>
</head>

<body onload="deleteLoad()">
    <section class="hero is-success">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    Personas registradas
                </h1>
                <h2 class="subtitle">
                    CRUD a JSON
                </h2>
            </div>
        </div>
    </section>
    <br><br>

    <div class="container is-fluid" id="contenedor">
        <progress class="progress is-small is-primary" max="100">15%</progress>
        <% personas.forEach(persona => { %>
            <div class="notification">
                <div class="box">
                    <article class="media">
                        <div class="media-left">
                            <figure class="image is-64x64">
                                <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
                            </figure>
                        </div>
                        <div class="media-content">
                            <div class="content">
                                <p>
                                    <strong><%=persona.nombre%> <%=persona.apellido%></strong>
                                    <br> Edad:
                                    <%=persona.edad%>
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
            <% }) %>
                <div class="buttons">
                    <button onclick="window.location.href = '/admin'" class="button is-primary">Administrar</button>
                </div>

    </div>


</body>
<script>
    function deleteLoad() {
        setTimeout(() => {
            document.querySelector('#contenedor').firstElementChild.remove()
        }, 1500)
    }
</script>

</html>